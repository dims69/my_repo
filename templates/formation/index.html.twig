{% extends 'base.html.twig' %}

{% block title %}Formation index{% endblock %}

{% block body %}
    <h1>Formation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formations in formation %}
            <tr>
                <td>{{ formations.id }}</td>
                <td>{{ formations.description }}</td>
                <td>
                    <a href="{{ path('formation_show', {'id': formations.id}) }}">show</a>
                    <a href="{{ path('formation_edit', {'id': formations.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('formation_new') }}">Create new</a>
{% endblock %}
