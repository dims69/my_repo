	<link rel="shortcut icon" href="{{asset('img/favicon.jpg')}}">
</head>





<body>
	
	<!-- Header-->
		<nav>
			<ul>
			  <li><a class="nav-item" href="#1">A Propos</a></li>
			  <li><a class="nav-item" href="#2">Formations</a></li>
			  <li><a class="nav-item" href="#3">Compétences</a></li>
			  <li><a class="nav-item" href="#4">Contact</a></li>
			  <li><a class="nav-item" href="/my_cv/public/login" >Se Connecter</a></li>
			</ul>
		</nav>
	
	
	<header>
		<div class="h-background">
			<div class="middle">
				<h1>Olivier Pouchoy</h1>
				<p>Etudiant en Multimédia et Internet</p>
			</div>
			

		</div>

	</header>
	

		
		


  
      
		<!-- Introduction-->
<article id="sec">
		<section  class="center">
				<div class="container" id="1" >
		
					<p class="flotte">
					
					<div class="image">
							<img src="{{asset('img/Olivier_icone')}}" height = "400" width =" 400" >
			
					</div>
			<h1>Bienvenue sur mon CV !</h1>
					{% for apropo in apropos %}
