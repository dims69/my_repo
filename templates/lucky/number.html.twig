						<article>
						<ul>
							<li> {{ competence.getAudiovisuel() }}</li>
						</article>
					{% endfor %}
					</ul>
				</div>
			</div>
			<div class="row">
				<div class="grid-2">
					<h2><b>Infographie</b></h2>
				</div>
				<div class="grid-4">
						{% for competence in competences %}
						<article>
						<ul>
							<li> {{ competence.getInfographie() }}</li>
						</ul>
						</article>
					{% endfor %}
				</div>
			</div>
			<div class="row">
				<div class="grid-2">
					<h2><b>Communication</b></h2>
				</div>
				<div class="grid-4">
					{% for competence in competences %}
						<article>
						<ul>
							<li>{{ competence.getCommunication() }}</li>
							
							</br></br></br>
					{% if is_granted('ROLE_ADMIN') %}
						<a href="{{ path('competence_new',{'id':competence.getId()}) }}"target="_blank"><button type="button">Créer</a>
						<a href="{{ path('competence_edit',{'id':competence.getId()}) }}" target="_blank"><button type="button">Modifier</buttons></a>
						<a href="{{ path('form_competence_delete',{'id':competence.getId()}) }}" target="_blank"><button type="button">Supprimer</buttons></a>
					{% endif %}
						</ul>
						</article>
					{% endfor %}
				</div>
			</div>
		</section>
		
		<hr>
		
		<section>
			<!--List of skills-->
			<div class="row">
				<div class="grid-2"  id="4">
					<h1>Contact</h1>
					<ul>
						{% for contact in contacts %}
						<article>
						<ul>
							<li><b>Email</b>  {{ contact.getMail() }}</li>
							<li><b>Téléphone</b>  {{contact.getTelephone() }}</li>
							<li><b>Site Portfolio</b>  {{ contact.getSite() }}</li>
						  {% if is_granted('ROLE_ADMIN') %}
								<a href="{{ path('form_contact',{'id':contact.getId()}) }}"target="_blank"><button type="button">Créer</a>
								<a href="{{ path('contact_edit',{'id':contact.getId()}) }}" target="_blank"><button type="button">Modifier</buttons></a>
								<a href="{{ path('form_contact_delete',{'id':contact.getId()}) }}" target="_blank"><button type="button">Supprimer</buttons></a>
						 {% endif %}
						</ul>
						</article>
					{% endfor %}
				
		<!--Footer-->
		<footer class="center">
			<hr>
			<span>&copy; Olivier Pouchoy 2019</span>
		</footer>
		
	</div><!-- End Container -->
	</article>
	
	
	
	
<script type="text/javascript">

var el = document.querySelectorAll('nav ul a');
var parralax = document.querySelector('header .h-background');
var middle = document.querySelector('header .middle');



console.log(parralax);
console.log("==========");



window.addEventListener("scroll", function (event) {
    var scroll = this.scrollY;
    
    for (var i = 0; i < el.length;i++){
    	console.log(scroll);
	    if (scroll > 500){
	        el[i].style.webkitTextStroke = "1px #000";
	    }
	    else{ 
	        el[i].style.webkitTextStroke = "1px #fff";
	    }
	}
    
    if (scroll < 500){
	    var parralaxE =  scroll/2;
	    var parralaxO= - (scroll/2)
	    middle.style.top =  (parralaxO/2) + "px";
	    middle.style.bottom = parralaxE + "px";
    }
    
    if(scroll> 200 ) {
    	parralax.style.backgroundSize =(parralaxE*window.innerWidth)+"px"; 
    }



});

</script>
	
</body>
</html>


