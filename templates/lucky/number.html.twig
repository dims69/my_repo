					</article>
    		{% endfor %}
    			</ul>
			</div>	
			</div>
			<div class="clear"></div>
		</section>
		<hr>
			
		<!--Experience Tables-->
		 
			<div class="sectionTitle"  id="3">
				<h1>Compétences</h1>
			</div>
		
			
		<section class="experience">
			<div class="row">
				<div class="grid-2">
			    	 <h2> <b>Audiovisuel</b></h2>
				</div>
