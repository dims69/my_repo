						<p>{{ apropo.getDescription() }}</p>
						{% if is_granted('ROLE_ADMIN') %}
						<a href="{{ path('apropos_new',{'id':apropo.getId()}) }}" target="_blank"><button type="button">Créer</buttons></a>
