						{% endif %}

						
					</article>
    				{% endfor %}
			</p>
		</section>
		
		
	
		<span class ="hr"></span>
	
	
	<!-- New container-->
	<div class="container">
		
		
	
	   <section> 
			<div class="sectionTitle" id="2">
				<h1>Formations</h1>
			</div>
			<div class="sectionContent">
			<div class="col-md-10 col-sm-9 col-xs-12">
    			<ul>
    		{% for formation in formations %}
        			<article>
						<h2> <b> {{ formation.getName() }}</b> </h2>
						<p> {{ formation.getDuree() }} </p>
						<p>{{ formation.getLieu() }}</p>
						
			    {% if is_granted('ROLE_ADMIN') %}
						<a href="{{ path('formation_new',{'id':formation.getId()}) }}" target="_blank"><button type="button">Créer</buttons></a>
						<a href="{{ path('formation_edit',{'id':formation.getId()}) }}" target="_blank"><button type="button">Modifier</buttons></a>
